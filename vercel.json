{
  "version": 2,
  "builds": [
    {
      "src": "backend/api.ts",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "/dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/api.ts" },
    { "src": "/(.*)", "dest": "/frontend/dist" }
  ]
}
