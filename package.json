{
  "name": "pi-cture",
  "version": "1.0.0",
  "description": "An service allowing pi-ctures to be drawn on an LED matrix",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && npm run dev",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test": "npm run test:frontend && npm run test:backend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bryce-bardwell/pi-cture.git"
  },
  "author": "bryce-bardwell",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bryce-bardwell/pi-cture/issues"
  },
  "homepage": "https://github.com/bryce-bardwell/pi-cture#readme",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "concurrently": "^8.0.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
